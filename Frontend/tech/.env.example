# Environment variables for frontend configuration
# Copy this file to .env and update with your values

# Backend API URL
VITE_API_URL=http://localhost:8000

# WebSocket URL for real-time features
VITE_WS_URL=ws://localhost:8000

# API Version (default: v1)
VITE_API_VERSION=v1

# Authentication settings
VITE_AUTH_TOKEN_KEY=rfp_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=rfp_refresh_token

# Request timeout (milliseconds)
VITE_REQUEST_TIMEOUT=30000

# Enable debug mode
VITE_DEBUG_MODE=false

# File upload settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.xls,.xlsx

# Polling intervals (milliseconds)
VITE_STATUS_POLL_INTERVAL=5000
VITE_HEALTH_CHECK_INTERVAL=30000

# UI Settings
VITE_ITEMS_PER_PAGE=20
VITE_TOAST_DURATION=5000
