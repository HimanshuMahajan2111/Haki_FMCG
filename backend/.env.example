# Application
APP_NAME=RFP_Response_System
ENVIRONMENT=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/rfp_system
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (for caching and agent coordination)
REDIS_URL=redis://localhost:6379/0

# AI Models
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-small

# Vector Database
CHROMA_PERSIST_DIR=./data/chromadb

# Agents Configuration
TECHNICAL_AGENT_MODEL=gpt-4-turbo-preview
PRICING_AGENT_MODEL=gpt-4-turbo-preview
PARALLEL_EXECUTION=True
MAX_AGENT_RETRIES=3

# Data Paths
DATA_DIR=../FMEG_data
WIRES_CABLES_DIR=../wires_cables_data
STANDARDS_DIR=../wires_cables_standards
TESTING_DATA_DIR=../testing_data
RFP_INPUT_DIR=../RFPs
OUTPUT_DIR=./outputs

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
